#include <iostream>

using namespace std;

void happyBirthday(string name);

int main()
{
	string name = "Bro";
	happyBirthday(name);
	return 0;
}

void happyBirthday(string name)
{
	cout << "Happy Birthday to " << name << "\n";
	cout << "Happy Birthday to " << name << "\n";
	cout << "Happy Birthday dear " << name << "\n";
	cout << "Happy Birthday to " << name << "\n";
}
